@model EsameBackEnd_U1_S2.Models.Prodotto

@{
    ViewData["Title"] = "Dettagli Prodotto";
}

<h1>@Model.Nome</h1>

<div class="row">
    <div class="col-md-6">
        <img src="~/images/@Model.ImmagineCopertina" class="img-fluid" alt="Immagine di @Model.Nome">
    </div>
    <div class="col-md-6">
        <h2>@Model.Prezzo.ToString("C")</h2>
        <p>@Model.Descrizione</p>
        <h3>Immagini Aggiuntive</h3>
        @if (!string.IsNullOrEmpty(Model.ImmagineAggiuntiva1))
        {
            <img src="~/images/@Model.ImmagineAggiuntiva1" class="img-fluid" alt="Immagine aggiuntiva 1">
        }
        @if (!string.IsNullOrEmpty(Model.ImmagineAggiuntiva2))
        {
            <img src="~/images/@Model.ImmagineAggiuntiva2" class="img-fluid" alt="Immagine aggiuntiva 2">
        }
    </div>
</div>
